@* Contact Form *@


<section id="contact" class="bg-primary py-4 py-sm-5">
    <div class="container">
        <form id="contactForm" class="d-flex justify-content-center" method="post" autocomplete="off" novalidate>
            <div class="col-12 col-lg-8 bg-secondary p-3 p-sm-5">
                <h2 class="display-6 fw-normal mb-3">Get In Touch</h2>
                <div class="row mb-3">
                    <div class="vstack gap-1">
                        <div><i class="bi bi-telephone-fill"></i> 123-456-7890</div>
                        <div class="text-break"><i class="bi bi-envelope-fill"></i> info@CompanyName.com</div>
                        <div><i class="bi bi-geo-alt-fill"></i> Address</div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="EmailDetails.Name" type="text" class="form-control box-up-input shadow-none fw-medium" placeholder="Name" aria-label="Name">
                    <label asp-for="EmailDetails.Name"></label>
                    <span asp-validation-for="EmailDetails.Name" class="text-danger" />
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="EmailDetails.EmailAddress" type="email" class="form-control box-up-input shadow-none fw-medium" placeholder="Email" aria-label="Email">
                    <label asp-for="EmailDetails.EmailAddress"></label>
                    <span asp-validation-for="EmailDetails.EmailAddress" class="text-danger" />
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="EmailDetails.Subject" type="text" class="form-control box-up-input shadow-none fw-medium" placeholder="Subject" aria-label="Subject">
                    <label asp-for="EmailDetails.Subject"></label>
                    <span asp-validation-for="EmailDetails.Subject" class="text-danger" />
                </div>
                 
                <div class="form-floating mb-3">
                    <textarea asp-for="EmailDetails.Message" class="form-control bordered-textarea shadow-none textarea-large textarea-pre-line fw-medium" placeholder="Message" aria-label="Message"></textarea>
                    <label asp-for="EmailDetails.Message"></label>
                    <span asp-validation-for="EmailDetails.Message" class="text-danger" />
                </div>

                <button id="submitButton" type="submit" class="btn btn-info rounded-0 mb-0 text-light">Submit</button>
            </div>
        </form>
    </div>
</section>

